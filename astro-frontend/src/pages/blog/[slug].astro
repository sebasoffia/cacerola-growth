---
import Layout from '@/layouts/Layout.astro';
import { getPostBySlug, getPosts, formatDate, stripHtml, truncateText, getAuthorFromPost } from '@/lib/wordpress';

const { slug } = Astro.params;

const post = await getPostBySlug(slug as string);

if (!post) {
  return Astro.redirect('/growth/blog/');
}

// Posts relacionados
const relatedPosts = await getPosts({ perPage: 3 });
const filteredRelated = relatedPosts.filter((p) => p.id !== post.id).slice(0, 2);

const metaDescription = post.meta_description || truncateText(post.excerpt.rendered, 160);

// Datos del autor desde WordPress (con fallback a valores por defecto)
const author = getAuthorFromPost(post);
---

<Layout
  title={stripHtml(post.title.rendered)}
  description={metaDescription}
  image={post.featured_image_url || undefined}
>
  <article class="max-w-3xl mx-auto px-5 sm:px-6 py-8 sm:py-12">
    <header class="mb-6 sm:mb-8">
      <div class="flex flex-wrap gap-2 mb-3 sm:mb-4">
        {post.category_names.map((cat) => (
          <a
            href={`/growth/blog/categoria/${cat.slug}/`}
            class="text-xs sm:text-sm bg-primary-50 text-primary-700 px-2.5 sm:px-3 py-1 rounded-full hover:bg-primary-100 transition-colors"
          >
            {cat.name}
          </a>
        ))}
      </div>

      <h1
        class="text-2xl sm:text-3xl md:text-4xl font-bold mb-3 sm:mb-4 leading-tight"
        set:html={post.title.rendered}
      />

      <!-- Mini perfil del autor -->
      <div class="flex items-center gap-3 mt-4 sm:mt-5">
        <img
          src={author.avatar}
          alt={author.name}
          class="w-10 h-10 sm:w-12 sm:h-12 rounded-full object-cover border-2 border-primary-100"
          onerror="this.src='https://ui-avatars.com/api/?name=' + encodeURIComponent(this.alt) + '&background=fef7ee&color=df5b10&size=48'"
        />
        <div>
          <a
            href={author.linkedin}
            target="_blank"
            rel="noopener noreferrer"
            class="font-medium text-gray-900 hover:text-primary-600 transition-colors"
          >
            {author.name}
          </a>
          <div class="flex flex-wrap items-center gap-1.5 sm:gap-3 text-gray-500 text-xs sm:text-sm">
            <span>{formatDate(post.date)}</span>
            <span>•</span>
            <span>{post.reading_time} min de lectura</span>
          </div>
        </div>
      </div>
    </header>

    {post.featured_image_url && (
      <img
        src={post.featured_image_url}
        alt={stripHtml(post.title.rendered)}
        class="w-full rounded-lg mb-6 sm:mb-8"
        loading="eager"
      />
    )}

    <div
      class="prose prose-base sm:prose-lg max-w-none
             prose-headings:font-bold prose-headings:text-gray-900
             prose-p:text-gray-700 prose-p:leading-relaxed
             prose-a:text-primary-600 prose-a:no-underline hover:prose-a:underline
             prose-img:rounded-lg prose-img:mx-auto
             prose-blockquote:border-l-primary-500 prose-blockquote:bg-primary-50 prose-blockquote:rounded-r-lg prose-blockquote:py-1
             prose-ul:my-4 prose-ol:my-4 prose-li:my-1
             prose-table:text-sm prose-table:overflow-x-auto
             prose-th:bg-gray-50 prose-th:px-3 prose-th:py-2
             prose-td:px-3 prose-td:py-2 prose-td:border-b prose-td:border-gray-100"
      set:html={post.content.rendered}
    />

    <!-- Caja del autor completa -->
    <section class="mt-12 sm:mt-16 p-5 sm:p-6 bg-gray-50 rounded-xl border border-gray-100">
      <div class="flex flex-col sm:flex-row gap-4 sm:gap-5">
        <img
          src={author.avatar}
          alt={author.name}
          class="w-16 h-16 sm:w-20 sm:h-20 rounded-full object-cover border-2 border-primary-200 flex-shrink-0 mx-auto sm:mx-0"
          onerror="this.src='https://ui-avatars.com/api/?name=' + encodeURIComponent(this.alt) + '&background=fef7ee&color=df5b10&size=80'"
        />
        <div class="text-center sm:text-left">
          <p class="text-xs text-gray-500 uppercase tracking-wide mb-1">Escrito por</p>
          <h3 class="text-lg sm:text-xl font-bold text-gray-900 mb-1">{author.name}</h3>
          <p class="text-sm text-primary-600 font-medium mb-2">{author.role}</p>
          <p class="text-sm sm:text-base text-gray-600 leading-relaxed mb-3">{author.bio}</p>
          <div class="flex justify-center sm:justify-start gap-3">
            <a
              href={author.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-1.5 text-sm text-gray-600 hover:text-primary-600 transition-colors"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
              LinkedIn
            </a>
            <a
              href={author.twitter}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-1.5 text-sm text-gray-600 hover:text-primary-600 transition-colors"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
              Twitter
            </a>
          </div>
        </div>
      </div>
    </section>

    {filteredRelated.length > 0 && (
      <section class="mt-12 sm:mt-16 pt-6 sm:pt-8 border-t border-gray-200">
        <h2 class="text-lg sm:text-xl font-semibold mb-4 sm:mb-6">Artículos relacionados</h2>
        <div class="grid gap-4 sm:grid-cols-2 sm:gap-6">
          {filteredRelated.map((related) => (
            <a
              href={`/growth/blog/${related.slug}/`}
              class="block p-4 border border-gray-200 rounded-lg hover:shadow-md hover:border-primary-200 transition-all"
            >
              <h3 class="font-semibold mb-2 text-gray-900" set:html={related.title.rendered} />
              <p class="text-sm text-gray-600 leading-relaxed">
                {truncateText(related.excerpt.rendered, 80)}
              </p>
            </a>
          ))}
        </div>
      </section>
    )}
  </article>
</Layout>
