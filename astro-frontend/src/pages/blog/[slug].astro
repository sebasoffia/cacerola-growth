---
import Layout from '@/layouts/Layout.astro';
import { getPostBySlug, getPosts, formatDate, stripHtml, truncateText } from '@/lib/wordpress';

const { slug } = Astro.params;

const post = await getPostBySlug(slug as string);

if (!post) {
  return Astro.redirect('/growth/blog/');
}

// Posts relacionados
const relatedPosts = await getPosts({ perPage: 3 });
const filteredRelated = relatedPosts.filter((p) => p.id !== post.id).slice(0, 2);

const metaDescription = post.meta_description || truncateText(post.excerpt.rendered, 160);
---

<Layout
  title={stripHtml(post.title.rendered)}
  description={metaDescription}
  image={post.featured_image_url || undefined}
>
  <article class="max-w-3xl mx-auto px-4 py-12">
    <header class="mb-8">
      <div class="flex gap-2 mb-4">
        {post.category_names.map((cat) => (
          <a
            href={`/growth/blog/categoria/${cat.slug}/`}
            class="text-sm bg-primary-50 text-primary-700 px-3 py-1 rounded-full hover:bg-primary-100"
          >
            {cat.name}
          </a>
        ))}
      </div>

      <h1 class="text-3xl md:text-4xl font-bold mb-4" set:html={post.title.rendered} />

      <div class="flex items-center gap-4 text-gray-600 text-sm">
        <span>Por {post.author_name}</span>
        <span>{formatDate(post.date)}</span>
        <span>{post.reading_time} min de lectura</span>
      </div>
    </header>

    {post.featured_image_url && (
      <img
        src={post.featured_image_url}
        alt={stripHtml(post.title.rendered)}
        class="w-full rounded-lg mb-8"
      />
    )}

    <div
      class="prose prose-lg max-w-none prose-headings:font-semibold prose-a:text-primary-600 prose-img:rounded-lg"
      set:html={post.content.rendered}
    />

    {filteredRelated.length > 0 && (
      <section class="mt-16 pt-8 border-t border-gray-100">
        <h2 class="text-xl font-semibold mb-6">Articulos relacionados</h2>
        <div class="grid md:grid-cols-2 gap-6">
          {filteredRelated.map((related) => (
            <a
              href={`/growth/blog/${related.slug}/`}
              class="block p-4 border border-gray-100 rounded-lg hover:shadow-md transition-shadow"
            >
              <h3 class="font-semibold mb-2" set:html={related.title.rendered} />
              <p class="text-sm text-gray-600">
                {truncateText(related.excerpt.rendered, 80)}
              </p>
            </a>
          ))}
        </div>
      </section>
    )}
  </article>
</Layout>
