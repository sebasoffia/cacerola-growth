---
import Layout from '@/layouts/Layout.astro';
import { getPostBySlug, getPosts, formatDate, stripHtml, truncateText, getAuthorFromPost } from '@/lib/wordpress';

const { slug } = Astro.params;

const post = await getPostBySlug(slug as string);

if (!post) {
  return Astro.redirect('/growth/');
}

// Posts relacionados
const relatedPosts = await getPosts({ perPage: 3 });
const filteredRelated = relatedPosts.filter((p) => p.id !== post.id).slice(0, 2);

const metaDescription = post.meta_description || truncateText(post.excerpt.rendered, 160);

// Datos del autor desde WordPress (con fallback a valores por defecto)
const author = getAuthorFromPost(post);

// Dividir contenido por H2 para alternar colores de fondo
function splitContentByH2(html: string): string[] {
  // Dividir por H2 manteniendo el tag
  const sections = html.split(/(?=<h2)/i);
  return sections.filter(s => s.trim());
}

const contentSections = splitContentByH2(post.content.rendered);
---

<Layout
  title={stripHtml(post.title.rendered)}
  description={metaDescription}
  image={post.featured_image_url || undefined}
>
  <!-- Hero Section con fondo crema -->
  <section class="py-12 sm:py-16 md:py-20" style="background-color: #f6f3e3;">
    <div class="max-w-4xl mx-auto px-5 sm:px-6">
      <!-- Categorías -->
      <div class="flex flex-wrap gap-2 mb-4">
        {post.category_names.map((cat) => (
          <a
            href={`/growth/categoria/${cat.slug}/`}
            class="text-xs sm:text-sm bg-orange-100 text-orange-700 px-3 py-1 rounded-full hover:bg-orange-200 transition-colors font-medium"
          >
            {cat.name}
          </a>
        ))}
      </div>

      <!-- Autor con foto (estilo Toteat - primero el autor) -->
      <div class="flex items-center gap-3 mb-6">
        <img
          src="/growth/images/sebastian-soffia-stir.webp"
          alt={author.name}
          class="w-12 h-12 sm:w-14 sm:h-14 rounded-full object-cover border-2 border-white shadow-md"
        />
        <div>
          <p class="text-xs text-slate-500 uppercase tracking-wide">Escrito por</p>
          <a
            href={author.linkedin}
            target="_blank"
            rel="noopener noreferrer"
            class="font-semibold text-slate-900 hover:text-orange-500 transition-colors"
          >
            {author.name}
          </a>
          <div class="flex items-center gap-2 text-slate-500 text-xs sm:text-sm">
            <span>{formatDate(post.date)}</span>
            <span>•</span>
            <span>{post.reading_time} min de lectura</span>
          </div>
        </div>
      </div>

      <!-- H1 - Título principal -->
      <h1
        class="text-3xl sm:text-4xl md:text-5xl font-bold text-slate-900 leading-tight mb-6"
        set:html={post.title.rendered}
      />

      <!-- Excerpt/Subtítulo -->
      {post.excerpt.rendered && (
        <p class="text-lg sm:text-xl text-slate-600 leading-relaxed mb-6">
          {truncateText(post.excerpt.rendered, 200)}
        </p>
      )}

      <!-- Acciones inline -->
      <div class="flex flex-wrap items-center gap-x-1 gap-y-2 text-sm text-slate-500 mb-8">
        <button
          id="copy-text-btn"
          class="inline-flex items-center gap-1.5 hover:text-orange-500 transition-colors"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
          </svg>
          <span>Copiar texto</span>
        </button>

        <span class="text-slate-300">|</span>

        <a
          href={`/growth/${slug}.md`}
          target="_blank"
          class="inline-flex items-center gap-1.5 hover:text-orange-500 transition-colors"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <span>Ver Markdown</span>
        </a>

        <span class="text-slate-300">|</span>

        <a
          id="open-claude-btn"
          href="#"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-1.5 hover:text-orange-500 transition-colors"
        >
          <img src="/growth/images/anthropic-icon-tdvkiqisswbrmtkiygb0ia.svg" alt="Claude" class="w-4 h-4" />
          <span>Ábrelo en Claude</span>
        </a>

        <span class="text-slate-300">|</span>

        <a
          id="open-chatgpt-btn"
          href="#"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-1.5 hover:text-orange-500 transition-colors"
        >
          <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
            <path d="M22.2819 9.8211a5.9847 5.9847 0 0 0-.5157-4.9108 6.0462 6.0462 0 0 0-6.5098-2.9A6.0651 6.0651 0 0 0 4.9807 4.1818a5.9847 5.9847 0 0 0-3.9977 2.9 6.0462 6.0462 0 0 0 .7427 7.0966 5.98 5.98 0 0 0 .511 4.9107 6.051 6.051 0 0 0 6.5146 2.9001A5.9847 5.9847 0 0 0 13.2599 24a6.0557 6.0557 0 0 0 5.7718-4.2058 5.9894 5.9894 0 0 0 3.9977-2.9001 6.0557 6.0557 0 0 0-.7475-7.0729zm-9.022 12.6081a4.4755 4.4755 0 0 1-2.8764-1.0408l.1419-.0804 4.7783-2.7582a.7948.7948 0 0 0 .3927-.6813v-6.7369l2.02 1.1686a.071.071 0 0 1 .038.052v5.5826a4.504 4.504 0 0 1-4.4945 4.4944zm-9.6607-4.1254a4.4708 4.4708 0 0 1-.5346-3.0137l.142.0852 4.783 2.7582a.7712.7712 0 0 0 .7806 0l5.8428-3.3685v2.3324a.0804.0804 0 0 1-.0332.0615L9.74 19.9502a4.4992 4.4992 0 0 1-6.1408-1.6464zM2.3408 7.8956a4.485 4.485 0 0 1 2.3655-1.9728V11.6a.7664.7664 0 0 0 .3879.6765l5.8144 3.3543-2.0201 1.1685a.0757.0757 0 0 1-.071 0l-4.8303-2.7865A4.504 4.504 0 0 1 2.3408 7.8956zm16.0993 3.8558L12.6 8.3829l2.02-1.1638a.0757.0757 0 0 1 .071 0l4.8303 2.7913a4.4944 4.4944 0 0 1-.6765 8.1042v-5.6772a.79.79 0 0 0-.407-.667zm2.0107-3.0231l-.142-.0852-4.7735-2.7818a.7759.7759 0 0 0-.7854 0L9.409 9.2297V6.8974a.0662.0662 0 0 1 .0284-.0615l4.8303-2.7866a4.4992 4.4992 0 0 1 6.6802 4.66zM8.3065 12.863l-2.02-1.1638a.0804.0804 0 0 1-.038-.0567V6.0742a4.4992 4.4992 0 0 1 7.3757-3.4537l-.142.0805L8.704 5.459a.7948.7948 0 0 0-.3927.6813zm1.0976-2.3654l2.602-1.4998 2.6069 1.4998v2.9994l-2.5974 1.4997-2.6067-1.4997Z"/>
          </svg>
          <span>Ábrelo en ChatGPT</span>
        </a>
      </div>

      <!-- Imagen destacada -->
      {post.featured_image_url && (
        <img
          src={post.featured_image_url}
          alt={stripHtml(post.title.rendered)}
          class="w-full rounded-xl shadow-lg"
          loading="eager"
        />
      )}
    </div>
  </section>

  <!-- Contenido del artículo con secciones alternadas -->
  {contentSections.map((section, index) => (
    <section
      class="py-12 sm:py-16"
      style={index % 2 === 0 ? "background-color: #ffffff;" : "background-color: #f6f3e3;"}
    >
      <article class="max-w-4xl mx-auto px-5 sm:px-6">
        <div
          class="prose prose-lg max-w-none
                 prose-headings:font-bold prose-headings:text-slate-900
                 prose-h2:text-2xl prose-h2:sm:text-3xl prose-h2:mt-0 prose-h2:mb-6
                 prose-h3:text-xl prose-h3:sm:text-2xl prose-h3:mt-8 prose-h3:mb-4
                 prose-p:text-slate-600 prose-p:leading-relaxed prose-p:text-base prose-p:sm:text-lg
                 prose-a:text-orange-500 prose-a:no-underline hover:prose-a:underline
                 prose-strong:text-slate-900
                 prose-img:rounded-xl prose-img:shadow-md prose-img:mx-auto
                 prose-blockquote:border-l-4 prose-blockquote:border-orange-500 prose-blockquote:bg-slate-50 prose-blockquote:rounded-r-xl prose-blockquote:py-4 prose-blockquote:px-6 prose-blockquote:not-italic
                 prose-ul:my-6 prose-ol:my-6
                 prose-li:text-slate-600 prose-li:my-2
                 prose-table:text-sm prose-table:overflow-x-auto
                 prose-th:bg-slate-100 prose-th:px-4 prose-th:py-3 prose-th:text-left prose-th:font-semibold
                 prose-td:px-4 prose-td:py-3 prose-td:border-b prose-td:border-slate-100
                 prose-code:bg-slate-100 prose-code:px-2 prose-code:py-1 prose-code:rounded prose-code:text-sm prose-code:text-orange-600"
          set:html={section}
        />
      </article>
    </section>
  ))}

  <!-- Caja del autor completa -->
  <section class="py-12 sm:py-16 border-t border-slate-200" style="background-color: #f6f3e3;">
    <div class="max-w-4xl mx-auto px-5 sm:px-6">
      <div class="p-6 sm:p-8 bg-orange-50 rounded-2xl">
        <div class="flex flex-col sm:flex-row gap-5 sm:gap-6">
          <img
            src="/growth/images/sebastian-soffia-stir.webp"
            alt={author.name}
            class="w-20 h-20 sm:w-24 sm:h-24 rounded-full object-cover border-3 border-white shadow-lg flex-shrink-0 mx-auto sm:mx-0"
          />
          <div class="text-center sm:text-left">
            <p class="text-xs text-slate-500 uppercase tracking-wider mb-1">Sobre el autor</p>
            <h3 class="text-xl sm:text-2xl font-bold text-slate-900 mb-1">{author.name}</h3>
            <p class="text-sm text-orange-600 font-medium mb-3">{author.role}</p>
            <p class="text-slate-600 leading-relaxed mb-4">{author.bio}</p>
            <div class="flex justify-center sm:justify-start gap-4">
              <a
                href={author.linkedin}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 text-sm text-slate-600 hover:text-orange-500 transition-colors"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
                LinkedIn
              </a>
              <a
                href={author.twitter}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 text-sm text-slate-600 hover:text-orange-500 transition-colors"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
                Twitter
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Artículos relacionados -->
  {filteredRelated.length > 0 && (
    <section class="py-12 sm:py-16 bg-white border-t border-slate-100">
      <div class="max-w-4xl mx-auto px-5 sm:px-6">
        <h2 class="text-2xl sm:text-3xl font-bold text-slate-900 mb-8">Artículos relacionados</h2>
        <div class="grid gap-6 sm:grid-cols-2">
          {filteredRelated.map((related) => (
            <a
              href={`/growth/${related.slug}/`}
              class="group block p-5 sm:p-6 bg-slate-50 rounded-xl hover:bg-orange-50 hover:shadow-md transition-all"
            >
              <h3 class="font-bold text-slate-900 mb-2 group-hover:text-orange-500 transition-colors" set:html={related.title.rendered} />
              <p class="text-sm text-slate-600 leading-relaxed mb-3">
                {truncateText(related.excerpt.rendered, 100)}
              </p>
              <span class="text-xs text-orange-500 font-medium">Leer más →</span>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- CTA Final -->
  <section class="py-16 sm:py-20 bg-orange-500 text-white">
    <div class="max-w-4xl mx-auto px-5 sm:px-6 text-center">
      <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold mb-4">
        ¿Quieres resultados similares para tu negocio?
      </h2>
      <p class="text-lg opacity-90 mb-8 max-w-2xl mx-auto">
        Agenda una consulta gratuita y descubramos juntos las oportunidades de growth orgánico para tu empresa.
      </p>
      <a
        href="https://calendar.app.google/hpZiZQtju1VURQ1b6"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-block bg-white text-orange-500 hover:bg-slate-100 px-8 py-4 rounded-xl text-lg font-semibold transition-colors shadow-lg"
      >
        Agendar mi Sprint de Growth
      </a>
    </div>
  </section>
</Layout>

<script define:vars={{ postTitle: stripHtml(post.title.rendered), postContent: post.content.rendered }}>
  // Función para convertir HTML a texto plano
  function htmlToText(html) {
    const temp = document.createElement('div');
    temp.innerHTML = html;
    return temp.textContent || temp.innerText || '';
  }

  document.addEventListener('DOMContentLoaded', () => {
    const articleContent = postContent;
    const title = postTitle;

    // Copiar texto plano
    const copyBtn = document.getElementById('copy-text-btn');
    copyBtn?.addEventListener('click', async () => {
      const plainText = `${title}\n\n${htmlToText(articleContent)}`;
      try {
        await navigator.clipboard.writeText(plainText);
        const span = copyBtn.querySelector('span');
        if (span) {
          const origText = span.textContent;
          span.textContent = '¡Copiado!';
          setTimeout(() => {
            span.textContent = origText;
          }, 2000);
        }
      } catch (err) {
        console.error('Error al copiar:', err);
      }
    });

    // Abrir en Claude
    const claudeBtn = document.getElementById('open-claude-btn');
    if (claudeBtn) {
      const plainText = `${title}\n\n${htmlToText(articleContent)}`;
      const prompt = encodeURIComponent(`Analiza el siguiente artículo:\n\n${plainText}`);
      claudeBtn.href = `https://claude.ai/new?q=${prompt}`;
    }

    // Abrir en ChatGPT
    const chatgptBtn = document.getElementById('open-chatgpt-btn');
    if (chatgptBtn) {
      const plainText = `${title}\n\n${htmlToText(articleContent)}`;
      const prompt = encodeURIComponent(`Analiza el siguiente artículo:\n\n${plainText}`);
      chatgptBtn.href = `https://chat.openai.com/?q=${prompt}`;
    }
  });
</script>
