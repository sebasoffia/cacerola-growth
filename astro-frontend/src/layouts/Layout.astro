---
interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description = 'Growth Hacking y Marketing Digital', image } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, 'https://cacerola.cl');
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="https://cacerola.cl/favicon.ico" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO -->
    <title>{title} | Cacerola Growth</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph -->
    <meta property="og:type" content="article" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    {image && <meta property="og:image" content={image} />}

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    {image && <meta name="twitter:image" content={image} />}

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="min-h-screen bg-white text-slate-900 font-sans">
    <!-- Navigation estilo Toteat -->
    <nav class="border-b border-slate-200 sticky top-0 z-50" style="background-color: #f6f3e3;">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 py-4">
        <div class="flex items-center justify-between">
          <a href="/growth/" class="flex items-center gap-2">
            <div class="w-8 h-8 bg-orange-500 rounded-lg flex items-center justify-center">
              <span class="text-white font-bold text-sm">C</span>
            </div>
            <span class="text-xl font-bold text-slate-800">Cacerola</span>
          </a>

          <div class="flex items-center gap-6">
            <ul class="hidden sm:flex gap-6 text-sm">
              <li><a href="/growth/" class="text-slate-600 hover:text-orange-500 transition-colors">Blog</a></li>
              <li><a href="/growth/recursos/" class="text-slate-600 hover:text-orange-500 transition-colors">Recursos</a></li>
            </ul>
            <a
              href="https://cacerola.cl"
              class="text-sm text-orange-500 hover:text-orange-600 font-medium transition-colors"
            >
              ‚Üê Volver al inicio
            </a>
          </div>
        </div>
      </div>
    </nav>

    <main>
      <slot />
    </main>

    <!-- Footer estilo Toteat -->
    <footer class="bg-slate-900 text-slate-400 py-8">
      <div class="max-w-6xl mx-auto px-4 sm:px-6">
        <div class="flex flex-col md:flex-row justify-between items-center gap-4">
          <div class="flex items-center gap-2">
            <div class="w-8 h-8 bg-orange-500 rounded-lg flex items-center justify-center">
              <span class="text-white font-bold text-sm">C</span>
            </div>
            <span class="text-lg font-bold text-white">Cacerola</span>
          </div>
          <p class="text-sm">
            &copy; {new Date().getFullYear()} Cacerola Growth Marketing. Todos los derechos reservados.
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>
